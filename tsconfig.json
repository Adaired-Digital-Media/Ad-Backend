{
  "compilerOptions": {
    "target": "ES2020",
    // "target": "ES2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // "module": "commonjs",
    // "sourceMap": false,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
